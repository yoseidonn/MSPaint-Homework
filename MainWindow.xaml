<Window x:Class="MSPaint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSPaint"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <!-- Top menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File"/>
            <MenuItem Header="_Edit"/>
            <MenuItem Header="_View"/>
            <MenuItem Header="_Image"/>
            <MenuItem Header="_Colors"/>
            <MenuItem Header="_Help"/>
        </Menu>

        <!-- Bottom color bar -->
        <Border DockPanel.Dock="Bottom" Background="#FFF3E9D2" Padding="4">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Height="56">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <!-- Primary/secondary color previews -->
                    <StackPanel Orientation="Vertical" Margin="4" Width="40" HorizontalAlignment="Left">
                        <Border Background="Black" Height="20" BorderBrush="Gray" BorderThickness="1"/>
                        <Border Background="White" Height="20" BorderBrush="Gray" BorderThickness="1" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Color swatches -->
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <Button Width="18" Height="18" Margin="3" Background="Black"/>
                        <Button Width="18" Height="18" Margin="3" Background="Gray"/>
                        <Button Width="18" Height="18" Margin="3" Background="White"/>
                        <Button Width="18" Height="18" Margin="3" Background="Red"/>
                        <Button Width="18" Height="18" Margin="3" Background="Lime"/>
                        <Button Width="18" Height="18" Margin="3" Background="Cyan"/>
                        <Button Width="18" Height="18" Margin="3" Background="Blue"/>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Main area: left toolbar + canvas -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="72"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left vertical toolbar -->
            <Border Grid.Column="0" Background="#FFF0EFEF" BorderBrush="#FFDADADA" BorderThickness="1" Padding="6">
                <StackPanel>
                    <!-- Tool buttons: basit şekiller ile gösterim -->
                    <Button ToolTip="Select" Width="40" Height="40" Margin="0,2">
                        <Viewbox>
                            <Path Data="M2,2 L18,18 M18,2 L2,18" Stroke="Black" StrokeThickness="2"/>
                        </Viewbox>
                    </Button>
                    <Button ToolTip="Eraser" Width="40" Height="40" Margin="0,2">
                        <Viewbox>
                            <Rectangle Width="14" Height="10" Fill="#FFDDDDDD" Stroke="Black"/>
                        </Viewbox>
                    </Button>
                    <Button ToolTip="Fill" Width="40" Height="40" Margin="0,2">
                        <Viewbox>
                            <Ellipse Width="14" Height="14" Fill="Black"/>
                        </Viewbox>
                    </Button>
                    <Button ToolTip="Pencil" Width="40" Height="40" Margin="0,2">
                        <Viewbox>
                            <Path Data="M2,14 L6,10 L14,18 L10,22 Z" Fill="Black"/>
                        </Viewbox>
                    </Button>
                    <Separator Margin="0,6"/>
                    <Button ToolTip="Line" Width="40" Height="40" Margin="0,2">
                        <Viewbox>
                            <Path Data="M2,18 L18,6" Stroke="Black" StrokeThickness="2"/>
                        </Viewbox>
                    </Button>
                    <Button ToolTip="Rectangle" Width="40" Height="40" Margin="0,2">
                        <Viewbox>
                            <Rectangle Width="14" Height="10" Stroke="Black" Fill="Transparent"/>
                        </Viewbox>
                    </Button>
                    <Button ToolTip="Ellipse" Width="40" Height="40" Margin="0,2">
                        <Viewbox>
                            <Ellipse Width="14" Height="10" Stroke="Black" Fill="Transparent"/>
                        </Viewbox>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Drawing area with scrollbars -->
            <Border Grid.Column="1" Margin="8" BorderBrush="Gray" BorderThickness="1" Background="White">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <!-- Canvas başlangıç genişliği/uzunluğu büyük tutuldu; runtime'da dinamik ayarlanabilir -->
                    <Canvas x:Name="DrawingCanvas" Width="1200" Height="581" Background="White"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>
</Window>